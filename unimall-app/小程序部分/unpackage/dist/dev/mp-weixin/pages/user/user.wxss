.carousel-section {
  position: relative;
  /* padding-top: 10px; */
}
.carousel-section .titleNview-placing {
  height: 25px;
  padding-top: 44px;
  box-sizing: content-box;
}
.carousel-section .titleNview-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 426rpx;
  transition: .4s;
}
.carousel {
  width: 100%;
  height: 550rpx;
}
.carousel .carousel-item {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.carousel image {
  width: 100%;
  height: 100%;
}
.tj-sction .tj-item, .order-section .order-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tj-sction, .order-section {
  display: flex;
  justify-content: space-around;
  align-content: center;
  background: #fff;
  border-radius: 10rpx;
}
.user-section {
  padding: 10rpx 30rpx 0;
  position: relative;
  margin: 30rpx;
  box-shadow: 0 0 10rpx black;
  border-radius: 20rpx;
}
.user-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(1px);
          filter: blur(1px);
  opacity: .7;
}
.user-section .user-info-box {
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}
.user-section .user-info-box .portrait-box {
  width: 220rpx;
  text-align: center;
}
.user-section .user-info-box .portrait-box .portrait {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.user-section .user-info-box .username {
  font-size: 38rpx;
  color: #303133;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.user-section .user-info-box .level {
  display: block;
  font-size: 38rpx;
  color: #303133;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.user-section .vip-card-box {
  display: flex;
  flex-direction: column;
  /* height: 240upx; */
  background: linear-gradient(left, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8));
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  position: relative;
  padding: 20rpx 24rpx;
}
.user-section .vip-card-box .card-bg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.user-section .vip-card-box .b-btn {
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  /* width: 132upx; */
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36343c;
  border-radius: 20px;
  background: linear-gradient(left, #f9e6af, #ffd465);
  z-index: 1;
}
.user-section .vip-card-box .tit {
  font-size: 30rpx;
  border: 6rpx solid #f7d680;
  margin-bottom: 28rpx;
  display: inline-block;
  width: 100rpx;
  text-align: center;
}
.user-section .vip-card-box .progress-box {
  height: 40rpx;
}
.user-section .vip-card-box .e-b {
  font-size: 24rpx;
  margin-top: 10rpx;
  margin: 10rpx auto;
}
.cover-container {
  background: #f8f8f8;
  margin-top: 0rpx;
  padding: 30rpx;
  position: relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}
.cover-container .arc {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}
.tj-sction .tj-item {
  flex-direction: column;
  height: 140rpx;
  font-size: 24rpx;
  color: #75787d;
}
.tj-sction .num {
  font-size: 32rpx;
  color: #303133;
  margin-bottom: 8rpx;
}
.order-section {
  padding: 28rpx 0;
}
.order-section .order-item {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #303133;
}
.order-section .yticon {
  font-size: 48rpx;
  margin-bottom: 18rpx;
  color: #fa436a;
}
.order-section .icon-shouhoutuikuan {
  font-size: 44rpx;
}
.history-section {
  padding: 30rpx 0 0;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}
.history-section .sec-header {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #303133;
  line-height: 40rpx;
  margin-left: 30rpx;
}
.history-section .sec-header .yticon {
  font-size: 44rpx;
  color: #5eba8f;
  margin-right: 16rpx;
  line-height: 40rpx;
}
.history-section .h-list {
  white-space: nowrap;
  padding: 30rpx 30rpx 0;
}
.history-section .h-list image {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

