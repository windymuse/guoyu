.info-box {
  /* position:absolute; */
  /* left: 0; */
  top: 30rpx;
  width: 100%;
  padding: 0;
  background-color: white;
}
.info-box .title {
  font-size: 50rpx;
  line-height: 80rpx;
  height: 80rpx;
  margin-top: 40rpx;
  margin-left: 80rpx;
}
.info-box .info {
  font-size: 24rpx;
  color: #909399;
  margin: 20rpx 0;
  margin-left: 80rpx;
}
.info-box .switch {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 54rpx;
  width: 180rpx;
  border-radius: 54rpx;
  background: #c1c1c1;
}
.info-box .switchNums {
  width: 112rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 54rpx;
  text-align: center;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}
.info-box .switchNums.currentNum {
  background: #6a74c9;
  color: #ffffff;
}
.info-box .ser-input {
  flex: 1;
  width: 100%;
  height: 64rpx;
  line-height: 56rpx;
  text-align: left;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #606266;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid grey;
  box-sizing: border-box;
}
page,
.content {
  height: 100%;
  background-color: #f8f8f8;
}
.content {
  display: flex;
  align-items: center;
  flex-flow: column;
}
.container {
  display: flex;
  align-items: center;
  flex-flow: row;
}
.left-aside {
  flex-shrink: 0;
  width: 200rpx;
  height: 100%;
  background-color: #f8f8f8;
}
.f-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  color: #606266;
  position: relative;
}
.f-item.active {
  color: #fa436a;
  background: white;
}
.f-item.active:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  height: 100rpx;
  width: 16rpx;
  background-color: #fa436a;
  /* border-radius: 0 4px 4px 0; */
  opacity: .8;
}
.right-aside {
  flex: 1;
  overflow: hidden;
  padding-left: 20rpx;
  width: 550rpx;
  background-color: white;
  min-height: 1000rpx;
  padding-bottom: 40rpx;
}
.s-item {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding-top: 8rpx;
  font-size: 28rpx;
  color: #303133;
  width: 100%;
  display: inline-block;
  clear: both;
}
.t-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background: #fff;
  padding-top: 12rpx;
}
.t-list:after {
  content: '';
  flex: 99;
  height: 0;
}
.t-item {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 500rpx;
  font-size: 26rpx;
  color: #666;
  padding-bottom: 20rpx;
  position: relative;
  height: 200rpx;
}
.t-item .img {
  position: absolute;
  left: 20rpx;
  width: 140rpx;
  height: 140rpx;
}
.t-item .title {
  position: absolute;
  right: 20rpx;
  width: 300rpx;
}
.t-item .price {
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
}
.t-item .chooseBtn {
  position: absolute;
  right: 0rpx;
  bottom: 0;
  padding: 5rpx 20rpx;
  background-color: #28D7FE;
  border-radius: 20rpx;
  color: white;
}
.product-detail {
  position: relative;
  text-align: center;
}
.product-detail .close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #909399;
  border-radius: 50%;
  text-align: center;
  line-height: 60rpx;
  color: #909399;
}
.product-detail .img {
  height: 500rpx;
  width: 100%;
}
.product-detail .info {
  margin-left: 50rpx;
  text-align: left;
}
.product-detail .box {
  border-top: 2rpx solid #909399;
  margin: 0 20rpx;
  position: relative;
  margin-top: 80rpx;
}
.product-detail .box .price {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}
.product-detail .box .sub {
  position: absolute;
  right: 100rpx;
  top: 20rpx;
  border: 1rpx solid #909399;
  color: #909399;
  box-sizing: border-box;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  line-height: 30rpx;
  font-size: 40rpx;
}
.product-detail .box .num {
  position: absolute;
  right: 60rpx;
  top: 20rpx;
  color: #909399;
  box-sizing: border-box;
  height: 40rpx;
  width: 40rpx;
}
.product-detail .box .add {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: #909399;
  box-sizing: border-box;
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  line-height: 30rpx;
  font-size: 40rpx;
  color: white;
  background-color: #28D7FE;
}
.product-detail .box .btn {
  height: 80rpx;
  background-color: #28D7FE;
  width: 60%;
  margin: 0 auto;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  color: white;
  font-weight: bold;
}
.product-detail .box .attr-list {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: #606266;
  padding-top: 30rpx;
  padding-left: 10rpx;
  margin: 40rpx auto;
}
.product-detail .box .item-list {
  padding: 20rpx 0 0;
  display: flex;
  flex-wrap: wrap;
}
.product-detail .box .item-list text {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #eee;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 100rpx;
  min-width: 60rpx;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #303133;
}
.product-detail .box .item-list .selected {
  background: #fbebee;
  color: #fa436a;
}

